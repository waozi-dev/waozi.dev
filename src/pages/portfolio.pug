extends ../layouts/base_layout.pug

mixin card(imageSrc, title, description, linkText, linkHref)
  div.card
    img.card-image(src=imageSrc, alt=title)
    div.card-content
      h2= title
      p= description
      a.button(href=linkHref)= linkText

block content
  div.content
    h1 Tools and Applications
    div.portfolio-card-container
      +card('/assets/cards/evotico.jpg', 'Evotico', 'Streamlining secure, efficient electronic voting for organizations and communities, fostering global empowerment.', 'Start a Process!', 'https://ukuvota.world')
      +card('/assets/cards/inbe.jpg', 'Inner Breeze', 'Inner Breeze is a breathing tracker for the Wim Hof breathing technique, helping users regain focus in their lives by meditating regularly and keeping track of their progress.', 'Start Meditating!', 'https://naox.io/inbe/#/')
    h1 Video Games
    div.portfolio-card-container
      +card('/assets/cards/geocats.png', 'Geocats', 'Geocats is a 2D action-platformer centered around the Geocats from Geoterra. They search for geocaches. The project has been discontinued.', 'Play now!', 'https://geocats.netlify.app')
